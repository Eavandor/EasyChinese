<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/parentlayout"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context="LoginAndCreateAccount.CreateAccountActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:layout_marginVertical="90dp"
    android:textColor="#5378ef"
    android:textStyle="bold"
    android:text="User regesteration"
    ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/email"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/mail"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:id="@+id/ed235"
                android:layout_height="59dp"
                android:inputType="textEmailAddress"
                android:textSize="17dp"
                android:hint="Email Address:"
android:background="@null"
                android:layout_width="320dp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f1f1f1"
            ></LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f1f1f1"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/pwd01"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/ping"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed236"
                android:layout_height="59dp"
                android:hint="Please enter your password:"
                android:textSize="17dp"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_width="270dp"></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"
            android:layout_marginHorizontal="20dp"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/pwd02"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:tint="#5b6678"
                android:src="@drawable/ping"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed237"
                android:layout_height="59dp"
                android:hint="Please confirm your password:"
                android:textSize="17dp"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_width="270dp"></EditText>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_margin="0dp"
android:id="@+id/v"
        android:padding="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#5b6678"
            android:src="@drawable/ver"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            ></ImageView>
        <EditText
            android:id="@+id/ed556"
            android:layout_height="59dp"
            android:hint="Verification Code:"
            android:textSize="17dp"
            android:background="@null"
            android:layout_width="wrap_content"></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <Button
                android:id="@+id/vinlogin4"
                android:layout_margin="0dp"
                android:visibility="visible"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET"
                />
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:id="@+id/invisiblelayout"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/verificationcode"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/afteddsaad"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"
        android:layout_marginHorizontal="20dp"
        ></LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/register"
        android:background="@drawable/crbg2"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:text="Regester"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gotologin"
        android:text="Go to login ã€‹"
        android:textColor="#5378ef"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        ></TextView>
</LinearLayout>