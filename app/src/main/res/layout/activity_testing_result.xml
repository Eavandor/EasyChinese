<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="TestWord.TestingResultActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/fade"
            android:gravity="center_horizontal"
            >

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:id="@+id/jkh"
                    android:textSize="60dp"
                    android:layout_gravity="center"
                    android:textColor="#EE3455"/>

                <com.xuexiang.xui.widget.progress.CircleProgressView
                    android:id="@+id/progressView_circle_main"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    app:cpv_animate_type="AccelerateDecelerateInterpolator"
                    app:cpv_circle_broken="true"
                    app:cpv_end_color="#EE3455"
                    app:cpv_end_progress="98"
                    app:cpv_isFilled="false"
                    app:cpv_isTracked="true"
                    app:cpv_progress_duration="1500"
                    app:cpv_progress_textColor="#299EE3"
                    app:cpv_progress_textSize="48sp"
                    app:cpv_progress_textVisibility="false"
                    app:cpv_start_color=" #FFaa89"
                    app:cpv_start_progress="0"
                    app:cpv_track_color="#F0F0F0"
                    app:cpv_track_width="26dp"
                    app:cpv_progress_width="26dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accuratcy"
                        android:textColor="#EE3455"
                        android:textSize="25dp"
                        ></TextView>
                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/asdad"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/crbg9"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="speed: "
                        />
                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hpv_language"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        app:hpv_end_color="#709b94"
                        app:hpv_end_progress="92"
                        app:hpv_isTracked="true"
                        app:hpv_progress_duration="800"
                        app:hpv_progress_textColor="#709b94"
                        app:hpv_progress_textVisibility="true"
                        app:hpv_progress_textSize="10dp"
                        app:hpv_start_color="#709b94"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="accuracy: "
                        />
                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hpv_language2"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        app:hpv_end_color="#efa653"
                        app:hpv_end_progress="92"
                        app:hpv_isTracked="true"
                        app:hpv_progress_textSize="10dp"
                        app:hpv_progress_duration="800"
                        app:hpv_progress_textColor="#efa653"
                        app:hpv_progress_textVisibility="true"
                        app:hpv_start_color="#efa653"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="30dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="30dp"
                    android:gravity="bottom"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="difficulty: "
                        />
                    <com.xuexiang.xui.widget.progress.HorizontalProgressView
                        android:id="@+id/hpv_language3"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        app:hpv_end_color="#ef6853"
                        app:hpv_end_progress="92"
                        app:hpv_isTracked="true"
                        app:hpv_progress_textSize="10dp"
                        app:hpv_progress_duration="800"
                        app:hpv_progress_textColor="#ef6853"
                        app:hpv_progress_textVisibility="true"
                        app:hpv_start_color="#ef6853"
                        app:hpv_track_color="#f4f4f4"
                        app:hpv_track_width="8dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/hkjhkj"
                android:layout_marginHorizontal="30dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:background="@drawable/crbg8"
                    android:textSize="20dp"
                    android:id="@+id/kjhds"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="See More"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="30dp"
                android:textAllCaps="false"
                android:background="@drawable/crbg12"
                android:textColor="@color/black"
                android:id="@+id/more"
                />

<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:text="Finish Review"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="50dp"
    android:textStyle="bold"
    android:layout_marginHorizontal="30dp"
    android:textAllCaps="false"
    android:background="@drawable/crbg10"
    android:textColor="@color/black"
    android:id="@+id/jkjhkads"
    />
        </LinearLayout>
    </ScrollView>

</LinearLayout>