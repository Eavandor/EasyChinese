<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/parentlayout"
    android:background="@drawable/login_bg"
    tools:context="LoginAndCreateAccount.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="27dp"
        android:orientation="horizontal"
        android:id="@+id/parentlayout2"
        android:gravity="center_vertical"
        android:background="@drawable/liniarlayout_in_login"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/parentlayout3"
            android:gravity="center_horizontal"
            >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/titleimg"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hjkh"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:src="@drawable/account"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed2"
                android:inputType="textEmailAddress"


                android:layout_width="265dp"
                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="Email:"
                ></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"
            android:layout_marginHorizontal="20dp"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/hjkh2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/password"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                ></ImageView>
            <EditText
                android:id="@+id/ed3"
                android:inputType="textPassword"

                android:layout_width="265dp"
                android:layout_height="59dp"
                android:background="@drawable/liniarlayout_in_login"
                android:hint="Password:"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f0f0f0"
            android:layout_marginHorizontal="20dp"
            ></LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5378ef"
                android:textStyle="bold"
                android:id="@+id/forget"
                android:text="Forget Password?"
                android:layout_alignParentLeft="true"
                android:textSize="10dp"
                ></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5378ef"
                android:textStyle="bold"
                android:text="Help"
                android:id="@+id/help"
                android:layout_alignParentRight="true"
                android:textSize="10dp"
                ></TextView>
        </RelativeLayout>
        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:id="@+id/login"
            android:background="@drawable/crbg2"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:text="Login"
            ></Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gotocreate"
            android:text="Register for a new account ã€‹"
            android:textColor="#5378ef"
            android:layout_marginTop="25dp"
            android:textSize="13dp"
            ></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>